
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(uid) { return isSignedIn() && request.auth.uid == uid; }
    match /leaderboards/{scope} { allow read: if true; allow write: if false; }
    match /users/{uid} {
      allow read: if true;
      allow create, update: if isOwner(uid);
      match /bookmarks/{jamId} { allow read, create, delete: if isOwner(uid); }
    }
    match /jams/{jamId} {
      allow read: if resource.data.status == "published" || (isSignedIn() && request.auth.uid == resource.data.creatorId);
      allow create: if isSignedIn() && request.resource.data.creatorId == request.auth.uid && request.resource.data.status == "draft";
      allow update: if isSignedIn() && resource.data.creatorId == request.auth.uid;
    }
  }
}
